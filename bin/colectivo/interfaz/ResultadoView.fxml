<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="colectivo.interfaz.ResultadoController">

    <top>
        <ToolBar>
            <Label text="Resultados"/> <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Volver" onAction="#onVolver"/>
        </ToolBar>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <TableView fx:id="tblSegmentos" prefHeight="320">
                <columns>
                    <TableColumn fx:id="colLinea" text="%col.tipo" prefWidth="120"/>
                    <TableColumn fx:id="colParadas" text="Paradas" prefWidth="250"/>
                    <TableColumn fx:id="colSalida" text="%col.hora.salida" prefWidth="80"/>
                    <TableColumn fx:id="colEspera" text="Espera (min)" prefWidth="100"/>
                    <TableColumn fx:id="colDur" text="%col.duracion" prefWidth="100"/>
                    <TableColumn fx:id="colHoraLlegada" text="%col.hora.llegada" prefWidth="80"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>